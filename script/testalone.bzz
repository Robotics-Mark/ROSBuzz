# Executed at each time step.
function step() {
	log("Altitude: ", position.altitude)
	if(flight.rc_cmd==22) {
		flight.rc_cmd=0
		uav_takeoff(TARGET_ALTITUDE)		
	} else if(flight.rc_cmd==21) {
		flight.rc_cmd=0
		uav_land()
	} else if(flight.rc_cmd==16) {
		flight.rc_cmd=0
		uav_goto()
	}
